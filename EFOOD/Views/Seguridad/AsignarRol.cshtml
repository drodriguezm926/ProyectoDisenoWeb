@model EFOOD.Models.RolModel

@{
    ViewBag.Title = "AisgnarRol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 
<main role="main" class="container pt-5">
@using (Html.BeginForm("AsignarRol", "Seguridad"))
{
    <div class="row pt-3 justify-content-center bg-secondary mt-5" style="border-radius: 20px">
        <div class="col-5">
            <h1 class="lead text text-white text-center">Asignar Rol</h1>
        </div>
    </div>
    <div class="row pt-5 justify-content-center">
        <div class="col-5">
            <div class="row form-group">
                <label for="SelectorUsuario" class="text-info">Lista de usuarios</label>
                @{

                    List<SelectListItem>
                             listItems = new List<SelectListItem>();

                    foreach (var item in EFOOD.Models.Admin.ObtenerAdmin())
                    {

                        listItems.Add(new SelectListItem
                        {
                            Text = item.Username,
                            Value = item.UserID.ToString()
                        });
                    }
                    <!-- Descripcion -->
                    <div class="input-group input-group-sm mb-3 pt-4">
                        <label>Linea de comida&nbsp;&nbsp;</label>
                        @Html.DropDownListFor(model => model.userID, listItems, "-- Seleciona descripcion --", new { htmlAttributes = new { @class = "form-control", @type = "text" } })

                    </div>
                }
            </div>
            <div class="row">
                <fieldset class="form-group">
                    <label class="text-info">Activo</label>
                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="checkbox" class="form-check-input" name="OptionHabo" id="optionscheckactive" value="optionActive">
                            Habilitado
                        </label>
                    </div>
                </fieldset>
            </div>
        </div>
        <div class="col-3 col-sm-4">
            <!-- Usuario -->
            <fieldset class="form-group">
                <!--<label for="optionscheckbox1" class="text-info">Lista de roles</label>-->
                <label class="text-info">Lista de roles</label>
                @{

                    List<SelectListItem> listIRoles = new List<SelectListItem>();
                    listIRoles.Add(new SelectListItem
                    {
                        Text = "Administrador",
                        Value = "1"
                    });

                    listIRoles.Add(new SelectListItem
                    {
                        Text = "Seguridad",
                        Value = "2"
                    });

                    listIRoles.Add(new SelectListItem
                    {
                        Text = "Mantenimiento",
                        Value = "3",
                        Selected = true
                    });
                    listIRoles.Add(new SelectListItem
                    {
                        Text = "Consulta",
                        Value = "4"
                    });

                    foreach (var n in listIRoles)
                    {
                <div class="row">
                    @Html.RadioButtonFor(model => model.RoleID, n.Value)
                    <label>@n.Text</label>
                </div>
                    }


                }
            </fieldset>
        </div>
        <!-- Guardar boton -->
        <div class="input-group input-group-sm mb-3 justify-content-center pt-5">
            <button type="submit" class="btn btn-outline-info rounded-bottom" style="border-radius: 12px">Actualizar rol</button>
        </div>
        <!--====  End of inputs  ====-->

    </div>
}
</main>

